# ===================================
# EncodeSilent Ubuntu Bot - Environment Configuration
# Copy this file to .env and fill in your values
# ===================================

# ==========================
# TELEGRAM CONFIG (REQUIRED)
# ==========================
# Get from https://my.telegram.org
API_ID=123456789
API_HASH=your_api_hash_here
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
OWNER_ID=123456789

# ==========================
# RCLONE CONFIG (For Google Drive upload)
# ==========================
# Run 'rclone config' first to create remote
RCLONE_REMOTE=gdrive
RCLONE_FOLDER=Encode

# ==========================
# SEEDBOX FILEBROWSER CONFIG
# ==========================
SEEDBOX_ENABLED=false
SEEDBOX_USER=your_username
SEEDBOX_PASS=your_password
SEEDBOX_FB_URL=https://your-seedbox.com/filebrowser
SEEDBOX_FB_SHARE_HASH=your_share_hash

# ==========================
# MIRRORED.TO CONFIG
# ==========================
MIRRORED_ENABLED=false
MIRRORED_API_KEY=your_api_key
MIRRORED_MIRRORS=megaupnet,buzzheavier,krakenfiles,gofileio,onefichier,mixdropag

# ==========================
# BUZZHEAVIER CONFIG
# ==========================
BUZZHEAVIER_ENABLED=false
BUZZHEAVIER_ACCOUNT_ID=your_account_id

# ==========================
# GOFILE CONFIG
# ==========================
GOFILE_ENABLED=false
GOFILE_TOKEN=your_token

# ==========================
# FILEPRESS CONFIG (Mirror from GDrive)
# ==========================
FILEPRESS_ENABLED=false
FILEPRESS_DOMAIN=https://new3.filepress.cloud
FILEPRESS_API_KEY=your_api_key

# ==========================
# TURBOVID CONFIG (Embed Player - 1080p only)
# ==========================
TURBOVID_ENABLED=false
TURBOVID_API_KEY=your_api_key

# ==========================
# ABYSS.TO CONFIG (Embed Player - 1080p only)
# ==========================
ABYSS_ENABLED=false
ABYSS_API_KEY=your_api_key

# ==========================
# VIDHIDE CONFIG (Download/Embed - 1080p only)
# ==========================
VIDHIDE_ENABLED=false
VIDHIDE_API_KEY=your_api_key
VIDHIDE_DOMAIN=minochinos.com

# ==========================
# ENCODING DEFAULTS
# ==========================
DEFAULT_FONT_SIZE=15
DEFAULT_MARGIN_V=25
SUB_FONT_NAME=Arial
SUB_IS_BOLD=1
CRF_VALUE=26

# ==========================
# WATERMARK CONFIG
# ==========================
WATERMARK_ENABLED=true
WATERMARK_TEXT=Nonton dan Download di NUNASTREAM (ketik di google)
WATERMARK_FONTSIZE=30
WATERMARK_DURATION=30
# Linux font path - change if using different font
WATERMARK_FONT=/usr/share/fonts/truetype/dejavu/DejaVuSans-Bold.ttf

# ==========================
# DOWNLOAD TIMEOUT (seconds)
# ==========================
DOWNLOAD_TIMEOUT=1800
